generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  warranties Warranty[]

  @@map("users")
}

model Warranty {
  id            Int      @id @default(autoincrement())
  productName   String
  purchaseDate  DateTime
  expiryDate    DateTime
  notes         String?
  imageUrl      String?
  createdAt     DateTime @default(now())

  userId        Int
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("warranties")
}